{
  "include": ["src/**/*", "test/**/*"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
